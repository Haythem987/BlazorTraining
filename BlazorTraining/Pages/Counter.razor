@page "/counter"
<div class="h-full w-full flex justify-center items-center">
    <MImage Class="w-full h-full fixed object-cover" Src="images/64337772_p0.jpg"></MImage>
    <MCard
        Class="border-none w-400px h-300px p-10 shadow-xl backdrop-blur-md bg-white bg-op-30 shadow-gray-5 shadow-op-50">

        <MCardTitle Class="justify-center text-white font-bold text-2xl">Counter</MCardTitle>

        <MCardText Class="flex flex-col text-white font-bold text-2xl">
            <div class="justify-center items-center">
                Count: @_currentCount
            </div>

            <MButton Class="bg-white bg-op-30 text-white mt-7" OnClick="IncrementCount">Click me</MButton>
        </MCardText>
    </MCard>

</div>



@code {
    private int _currentCount;

    private void IncrementCount()
    {
        _currentCount++;
    }

}